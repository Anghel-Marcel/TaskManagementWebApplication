@model IEnumerable<TaskManagementWebApplication.Models.TaskItem>

@{
    ViewData["Title"] = "My Tasks";
}

<h2>My Tasks</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Task</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Title</td>
                <td>@t.Description</td>
                <td>@t.DueDate?.ToString("yyyy-MM-dd")</td>
                <td>@t.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
